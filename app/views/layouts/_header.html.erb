<header class="navbar-wrapper navbar-default navbar-fixed-top navbar-inverse">
  <div class="container">  # use container-fluid to use max browser width
    <%= link_to "sample app", root_path, id: "logo" %>
    <nav>
      <ul class="nav nav-pills collapse navbar-collapse navbar-right"> 
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Help", help_path %></li>
        <% if signed_in? %>
            <li><%= link_to "Users", '#' %></li>
